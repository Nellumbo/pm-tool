# =============================================================================
# PM TOOL - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# JWT Secret (REQUIRED)
# -----------------------------------------------------------------------------
# CRITICAL: Must be at least 32 characters long for security
# Generate a secure random string for production
# Example generation: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters-long-please

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the Express server
PORT=5000

# Node environment (development | production | test)
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite database file path (relative to project root)
DATABASE_PATH=./database.db

# Enable database logging (true | false)
DATABASE_LOGGING=false

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origin for CORS (use * for development only, specific URL for production)
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Security Headers
# -----------------------------------------------------------------------------
# Enable security headers (true | false)
HELMET_ENABLED=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level (error | warn | info | debug)
LOG_LEVEL=info

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# 1. Generate a strong JWT_SECRET (64+ characters recommended)
# 2. Set NODE_ENV=production
# 3. Use specific CORS_ORIGIN (not *)
# 4. Enable all security features
# 5. Review and adjust rate limits based on expected traffic
# =============================================================================
